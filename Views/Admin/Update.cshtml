@model WebApp.Models.ViewModels.UpdateUserViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Update</h1>
<div class="row">
    <div class="col-3 ">
        <form method="post" asp-action="Update">
            <div class="form-floating">
                <input asp-for="Id" class="form-control" disabled placeholder="Id" id="userid" />
                <label for="userid">Id</label>
            </div>
            <div class="form-floating">
                <input asp-for="AppUser.UserName" class="form-control" type="text" placeholder="Name" id="userName" />
                <label for="userName">Name</label>
            </div>
            <div class="form-floating">
                <input asp-for="AppUser.Email" class="form-control" placeholder="Email" id="mail" />
                <label for="mail">Email</label>
            </div>
            <div class="form-floating">
                <input asp-for="OldPassword" class="form-control" />
                <label for="key">Old Password</label>
                <span asp-validation-for="OldPassword"></span>
            </div>
            <div class="form-floating">
                <input asp-for="NewPassword" class="form-control" />
                <label for="key">New Password</label>
                <span asp-validation-for="NewPassword"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="row-cols-1">
                <button class="btn btn-primary bg-opacity-25 mb-1" type="submit">Save</button>
            </div>
            <div class="row-cols-1">
                <a class="btn btn-info bg-opacity-25" href="/Admin/Index">List</a>
            </div>
        </form>
    </div>
</div>
